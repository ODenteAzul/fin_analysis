# NEWS - A cada 30 minutos
*/30 * * * * docker run --rm --network=host harvester python run_process_coletas.py --news >> /var/log/news.log 2>&1

# INDICES - 07:00, 07:30, 08:00, dias úteis
0 7 * * 1-5 docker run --rm --network=host harvester python run_process_coletas.py --indices >> /var/log/indices.log 2>&1
30 7 * * 1-5 docker run --rm --network=host harvester python run_process_coletas.py --indices >> /var/log/indices.log 2>&1
0 8 * * 1-5 docker run --rm --network=host harvester python run_process_coletas.py --indices >> /var/log/indices.log 2>&1

# COTAÇÕES - das 10h às 18h, dias úteis, a cada 2 minutos
*/2 10-18 * * 1-5 docker run --rm --network=host harvester python run_process_coletas.py --cotacoes >> /var/log/cotacoes.log 2>&1

# FECHAMENTOS - 21:00, 21:30, 22:00, dias úteis
0 21 * * 1-5 docker run --rm --network=host harvester python run_process_coletas.py --fechamentos >> /var/log/fechamentos.log 2>&1
30 21 * * 1-5 docker run --rm --network=host harvester python run_process_coletas.py --fechamentos >> /var/log/fechamentos.log 2>&1
0 22 * * 1-5 docker run --rm --network=host harvester python run_process_coletas.py --fechamentos >> /var/log/fechamentos.log 2>&1